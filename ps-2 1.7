using System;
using System.Collections.Generic;
using System.Linq;
using System.Text;
using System.Threading.Tasks;

namespace ps_2_1._7
{
    internal class Program
    {
        static void Main(string[] args)
        {

            double x = double.Parse(Console.ReadLine());
            Console.WriteLine(Summarize(x));
            Console.WriteLine(Math.Atan(x));
            Console.ReadLine();
        }
       public static string  Summarize (double y)
        {
            
            double eps = 0.0001;
            int k = 0;
            double sum = 0;
            int count= 0;
            
            double a =Math.PI*Math.Sqrt(y*y)/2/y;
            if (Math.Abs(y) > 1)
            {
                while (Math.Abs(a - sum - Math.Atan(y) )>eps)
                {
                    for (int i = 0; i < k; i++)
                    {
                        int b=-1;
                        b*=b
                    }
                    for (int i = 0;i <2*k+1; i++) 
                    {
                        double c = y;
                        c*=c
                    }
                    sum += (b) / (c*(2 * k + 1));
                    k++;
                    count++;
                }
            }
            double ans = a - sum;
            string str= Convert.ToString(ans)+" "+Convert.ToString(count); 
            return str;
        } 
        
    }
}
